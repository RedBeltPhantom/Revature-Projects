<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#2196F3"
        tools:context=".ui.reservation.fragments.ReservationConfirmationFragment"
        android:orientation="vertical"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="172dp"
            android:layout_height="104dp"
            android:layout_marginStart="118dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="118dp"
            app:srcCompat="@drawable/ic_baseline_check_24"
            app:tint="#FFFCFD" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Thank you!"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Reservation is Complete"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy Your Workout!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:padding="10dp"
            />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical"
        tools:context=".ui.reservation.fragments.ReservationConfirmationFragment">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:padding="10dp"
            android:text="Time"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:text="1:00 PM"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="16dp"
            android:text="1-1-2021"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.394" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:padding="10dp"
            android:text="Date"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="Confirmation Details:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:padding="10dp"
            android:text="Location"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicago, IL"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.274" />

        <Button
            android:id="@+id/btnGoToCal"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="243dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:text="Save to Calendar"
            android:textColor="#1E7FE9"
            app:layout_constraintBottom_toTopOf="@+id/btnGoHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#074991" />

        <Button
            android:id="@+id/btnGoHome"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="243dp"
            android:layout_height="45dp"
            android:layout_marginBottom="68dp"
            android:text="HOme"
            android:textColor="#1E7FE9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#074991" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="165dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:padding="10dp"
            android:text="Confirmation ID"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_resID"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_resID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.367"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.153" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>